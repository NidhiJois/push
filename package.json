{
  "name": "push",
  "displayName": "Push",
  "description": "SFTP & FTP Syncing",
  "version": "0.0.1",
  "publisher": "njpanderson",
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Push",
      "properties": {
        "njpPush.settingsFilename": {
          "type": "string",
          "default": ".push.settings.json",
          "description": "Defines the push settings JSON filename."
        },
        "njpPush.privateSSHKey": {
          "type": "string",
          "default": "",
          "description": "Defines the default SSH key file for SFTP."
        },
        "njpPush.uploadQueue": {
          "type": "boolean",
          "default": true,
          "description": "Enable the upload queue for deferred uploads on save."
        },
        "njpPush.ignoreGlobs": {
          "type": "array",
          "default": [
            "**/.DS_Store",
            "**/Thumbs.db",
            "**/desktop.ini",
            "**/.git/*",
            "**/.svn/*"
          ],
          "description": "An array of regular expressions to match against ignored paths."
        }
      }
    },
    "commands": [
      {
        "command": "push.upload",
        "title": "Upload File"
      },
      {
        "command": "push.download",
        "title": "Download File"
      },
      {
        "command": "push.uploadFolder",
        "title": "Upload Folder"
      },
      {
        "command": "push.downloadFolder",
        "title": "Download Folder"
      },
      {
        "command": "push.uploadQueuedItems",
        "title": "Upload queued items"
      },
      {
        "command": "push.cancelQueues",
        "title": "Cancel currently active queue"
      },
      {
        "command": "push.stopQueues",
        "title": "Cancel currently active queue and force transfers to stop"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.upload",
          "group": "njp-push@1"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.download",
          "group": "njp-push@2"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "push.uploadFolder",
          "group": "njp-push@3"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "push.downloadFolder",
          "group": "njp-push@4"
        }
      ],
      "editor/title/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.upload",
          "group": "njp-push@1"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.download",
          "group": "njp-push@2"
        }
      ],
      "commandPalette": [
        {
          "command": "push.uploadFolder",
          "when": "false"
        },
        {
          "command": "push.downloadFolder",
          "when": "false"
        },
        {
          "command": "push.cancelQueues",
          "when": "push:queueInProgress"
        },
        {
          "command": "push.stopQueues",
          "when": "push:queueInProgress"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "eslint": "^3.6.0",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "micromatch": "^3.1.3",
    "mkdirp": "^0.5.1",
    "ssh2-sftp-client": "^1.1.0"
  }
}
