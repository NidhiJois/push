{
  "name": "push",
  "displayName": "Push",
  "description": "SFTP & FTP Syncing",
  "version": "0.0.1",
  "publisher": "njpanderson",
  "engines": {
    "vscode": "^1.14.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Push",
      "properties": {
        "njpPush.settingsFilename": {
          "type": "string",
          "default": ".push.settings.json",
          "description": "Defines the push settings JSON filename."
        },
        "njpPush.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enables debug mode, with more reporting."
        },
        "njpPush.privateSSHKey": {
          "type": "string",
          "default": "",
          "description": "Defines the default SSH key file for SFTP."
        },
        "njpPush.uploadQueue": {
          "type": "boolean",
          "default": true,
          "description": "Enable the upload queue for deferred uploads on save."
        },
        "njpPush.ignoreGlobs": {
          "type": "array",
          "default": [
            "**/.DS_Store",
            "**/Thumbs.db",
            "**/desktop.ini",
            "**/.git/*",
            "**/.svn/*"
          ],
          "description": "An array of regular expressions to match against ignored paths."
        },
        "njpPush.queueCompleteMessageType": {
          "type": "string",
          "default": "status",
          "description": "How to notify once a queue is completed. Choose 'status' or popup 'message'."
        },
        "njpPush.statusMessageColor": {
          "type": "string",
          "default": "notification.infoBackground",
          "description": "Set the colour of a status message (except progress). See https://code.visualstudio.com/docs/getstarted/theme-color-reference"
        }
      }
    },
    "commands": [
      {
        "command": "push.editServiceConfig",
        "title": "Create/edit Push configuration",
        "category": "Push"
      },
      {
        "command": "push.importConfig",
        "title": "Import Push configuration",
        "category": "Push"
      },
      {
        "command": "push.upload",
        "title": "Upload File",
        "category": "Push"
      },
      {
        "command": "push.download",
        "title": "Download File",
        "category": "Push"
      },
      {
        "command": "push.uploadFolder",
        "title": "Upload Folder",
        "category": "Push"
      },
      {
        "command": "push.downloadFolder",
        "title": "Download Folder",
        "category": "Push"
      },
      {
        "command": "push.diff",
        "title": "Compare with remote file",
        "category": "Push"
      },
      {
        "command": "push.uploadQueuedItems",
        "title": "Upload queued items",
        "category": "Push"
      },
      {
        "command": "push.cancelQueues",
        "title": "Cancel currently active queue",
        "category": "Push"
      },
      {
        "command": "push.stopQueues",
        "title": "Cancel currently active queue and force transfers to stop",
        "category": "Push"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "push.editServiceConfig",
          "group": "njp-push@1"
        },
        {
          "command": "push.importConfig",
          "group": "njp-push@1"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.upload",
          "group": "njp-push@2"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.download",
          "group": "njp-push@3"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.diff",
          "group": "njp-push@4"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "push.uploadFolder",
          "group": "njp-push@5"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "push.downloadFolder",
          "group": "njp-push@6"
        }
      ],
      "editor/title/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.upload",
          "group": "njp-push@1"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.download",
          "group": "njp-push@2"
        },
        {
          "when": "!explorerResourceIsFolder",
          "command": "push.diff",
          "group": "njp-push@3"
        }
      ],
      "commandPalette": [
        {
          "command": "push.uploadFolder",
          "when": "false"
        },
        {
          "command": "push.downloadFolder",
          "when": "false"
        },
        {
          "command": "push.cancelQueues",
          "when": "push:queueInProgress"
        },
        {
          "command": "push.stopQueues",
          "when": "push:queueInProgress"
        }
      ]
    },
    "keybindings": [
      {
        "command": "push.upload",
        "key": "ctrl+alt+u",
        "mac": "cmd+ctrl+u",
        "when": "editorTextFocus"
      },
      {
        "command": "push.download",
        "key": "ctrl+alt+d",
        "mac": "cmd+ctrl+d",
        "when": "editorTextFocus"
      },
      {
        "command": "push.uploadQueuedItems",
        "key": "ctrl+alt+p",
        "mac": "cmd+ctrl+p"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "eslint": "^3.19.0",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "glob": "^7.1.2",
    "jsonc-parser": "^1.0.0",
    "micromatch": "^3.1.3",
    "mkdirp": "^0.5.1",
    "ssh2-sftp-client": "^1.1.0",
    "tmp": "^0.0.33"
  }
}
