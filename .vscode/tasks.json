{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch-assets-vscode",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"focus": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"fileLocation": "relative",
				"pattern": [
					{
						"regexp": "error\\s+in\\s+(.*?)",
						"file": 1
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "WAIT\\s+Compiling...",
					"endsPattern": "Build Complete"
				}
			}
		}
	]
}
